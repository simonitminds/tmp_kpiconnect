<div class="auction-app">
	<div class="auction-app__header container is-fullhd">
		<div class="content is-clearfix">
			<h1 class="auction-list__title title is-3 has-margin-top-xl has-margin-bottom-xl">Admin Panel</h1>
		</div>
	</div>
	<div class="container is-fullhd">
		<div class="content columns">
			<%= render OceanconnectWeb.Admin.SharedView, "menu.html", conn: @conn %>
			<section class="admin-panel__content column is-three-quarters">
				<h2 class="admin-panel__content__header"><span class="is-inline-block">Companies</span>
					<%= link "Add Company", to: admin_company_path(@conn, :new), class: "button is-link is-inline-block has-margin-left-auto" %>
				</h2>
				<table class="admin-panel__table">
					<thead>
						<tr>
							<th>Name</th>
							<th>Contact</th>
							<th>Email</th>

							<th>Actions</th>
						</tr>
					</thead>
					<tbody>
						<%= for company <- @companies do %>
							<tr>
								<td><%= company.name %></td>
								<td><%= company.contact_name %></td>
								<td><%= company.email %></td>
								<td class="text-right">
									<%= link "Show", to: admin_barge_path(@conn, :show, barge), class: "button is-small is-primary is-inline-block" %>
									<%= link "Edit", to: admin_barge_path(@conn, :edit, barge), class: "button is-small is-primary is-inline-block" %>
									<%= link "Delete", to: admin_barge_path(@conn, :delete, barge), method: :delete, data: [confirm: "Are you sure?"], class: "button is-small is-danger is-inline-block" %>
								</td>
							</tr>
						<% end %>
					</tbody>
				</table>
				<%= if @page_number > 1 do %>
					<%= link "Previous Page", to: admin_barge_path(@conn, :index, page: @page_number - 1) %>
				<% end %>
				<%= if @page_number < @total_pages do %>
					<%= link "Next Page", to: admin_barge_path(@conn, :index, page: @page_number + 1) %>
				<% end %>
			</section>
		</div>
	</div>
</div>
